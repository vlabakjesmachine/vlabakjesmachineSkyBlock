	@EventHandler
    public void onPlayerMove13(PlayerMoveEvent e) {
		 Player p = e.getPlayer();
		 ItemStack wool = new ItemStack(Material.BRICK);
		    Location playerLoc = p.getLocation();
		 int s = playerLoc.getWorld().getBlockAt(playerLoc).getRelative(0, -1, 0).getTypeId();
		 if ((s == wool.getTypeId())){
			 if(p.getWorld() == Bukkit.getWorld("skyblock")){
			p.removePotionEffect(PotionEffectType.SPEED);
			p.removePotionEffect(PotionEffectType.POISON);
			p.removePotionEffect(PotionEffectType.JUMP);
			p.removePotionEffect(PotionEffectType.BLINDNESS);
			p.removePotionEffect(PotionEffectType.SLOW);
			 p.getWorld().playEffect(p.getLocation(), Effect.MOBSPAWNER_FLAMES, 5);
			      }
		 }
	 }
}
