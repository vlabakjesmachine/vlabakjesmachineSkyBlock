package nl.rotjochie.skyblock;

import org.bukkit.Bukkit;
import org.bukkit.DyeColor;
import org.bukkit.Effect;
import org.bukkit.Location;
import org.bukkit.Material;
import org.bukkit.World;
import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.Listener;
import org.bukkit.event.player.PlayerMoveEvent;
import org.bukkit.inventory.ItemStack;
import org.bukkit.potion.PotionEffect;
import org.bukkit.potion.PotionEffectType;

import nl.rotjochie.skyblock.Core;

public class WoolMovement implements Listener{
	
	public static Main pl;
	public WoolMovement(Main plugin)	{
		this.pl = plugin;
	}

	@EventHandler
    public void onPlayerMove(PlayerMoveEvent e) {
		 Player p = e.getPlayer();
		 ItemStack wool = new ItemStack(Material.WOOL, 1, DyeColor.LIGHT_BLUE.getData());
		    Location playerLoc = p.getLocation();
		 int s = playerLoc.getWorld().getBlockAt(playerLoc).getRelative(0, -1, 0).getTypeId();
		 if ((s == wool.getTypeId())){
			 if(p.getWorld().equals("skyblock")){
			p.addPotionEffect(new PotionEffect(PotionEffectType.SPEED, 200, 1));
			 p.getWorld().playEffect(p.getLocation(), Effect.MOBSPAWNER_FLAMES, 5);
			      }
		 }
	 }
	@EventHandler
    public void onPlayerMove2(PlayerMoveEvent e) {
